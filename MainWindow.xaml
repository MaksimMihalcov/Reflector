<Window x:Class="Reflector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reflector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Menu IsMainMenu="true" Margin="0,0,-0.4,396">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuOpenItem_Click"></MenuItem>
                <MenuItem Header="Close" Click="MenuCloseItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="381" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="774" IsReadOnly="True"/>
    </Grid>
</Window>
